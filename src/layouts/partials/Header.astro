---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { href: '/solution', label: 'Solution' },
  { href: '/about', label: 'Company' },
  { href: '/customers-story', label: 'Customer' },
  { href: '/pricing', label: 'Pricing' },
];

const dropdownItems = [
  { href: '/blog', label: 'Blog' },
  { href: '/blog-single', label: 'Blog Single' },
  { href: '/webinars', label: 'Webinars' },
  { href: '/webinar-single', label: 'Webinars Single' },
  { href: '/careers', label: 'Careers' },
  { href: '/career-single', label: 'Career Single' },
  { href: '/team', label: 'Team' },
  { href: '/contact', label: 'Contact' },
  { href: '/case-study', label: 'Case Study' },
  { href: '/404', label: '404 Page' },
];
---

<header class="header sticky top-0 z-30">
  <nav class="navbar container">
    <!-- logo -->
    <div class="order-0">
      <a class="navbar-brand block" href="/">
        <img src="/images/logo.png" width="126" height="35" alt="agile" />
      </a>
    </div>
    <!-- navbar toggler -->
    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label id="show-button" for="nav-toggle"
      class="order-3 flex cursor-pointer items-center text-dark lg:order-1 lg:hidden">
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
    </label>
    <label id="hide-button" for="nav-toggle" class="order-3 hidden cursor-pointer items-center text-dark lg:order-1">
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2" transform="rotate(45 10 10)">
        </polygon>
      </svg>
    </label>
    <!-- /navbar toggler -->
    <ul id="nav-menu"
      class="navbar-nav order-3 hidden w-full pb-6 lg:order-1 lg:flex lg:w-auto lg:space-x-2 lg:pb-0 xl:space-x-8">
      {navItems.map((item) => (
        <li class="nav-item">
          <a href={item.href} class={`nav-link ${currentPath === item.href ? 'nav-active' : ''}`}>{item.label}</a>
        </li>
      ))}
      <li class="nav-item nav-dropdown group relative">
        <span class="nav-link inline-flex items-center">
          Pages
          <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
            <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
          </svg>
        </span>
        <ul
          class="nav-dropdown-list hidden lg:group-hover:block lg:group-hover:visible lg:group-hover:opacity-100 lg:invisible lg:absolute lg:block lg:opacity-0 active">
          {dropdownItems.map((item) => (
            <li class="nav-dropdown-item">
              <a href={item.href} class={`nav-dropdown-link ${currentPath === item.href ? 'nav-active' : ''}`}>{item.label}</a>
            </li>
          ))}
        </ul>
      </li>
      <li class="mt-4 inline-block lg:hidden">
        <a class="btn btn-primary" href="/contact">
          Log In
        </a>
      </li>
    </ul>
    <div class="order-1 ml-auto flex items-center md:order-2 lg:ml-0">
      <a class="btn mr-5 btn-primary lg:inline-block" href="/contact">
        Get Started
      </a>

      <a class="btn hidden lg:inline-block group" href="/contact">
        Log In
        <span class="">
          <i class="fa fa-arrow-right group-hover:translate-x-2 duration-300 transition-all"></i>
        </span>
      </a>
    </div>
  </nav>
</header>
