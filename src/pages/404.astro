---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found - Agile">
  <Header />
  
  <section class="section py-20">
    <div class="container text-center">
      <h1 class="text-[120px] lg:text-[200px] font-bold text-primary opacity-20 mb-0">404</h1>
      <h2 class="mb-4 -mt-8 lg:-mt-16">Page Not Found</h2>
      <p class="mb-8 text-light text-lg max-w-md mx-auto">
        Sorry, the page you are looking for doesn't exist or has been moved.
      </p>
      <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
  </section>

  <Footer />
</Layout>
