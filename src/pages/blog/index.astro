---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
// Sort by date (newest first)
posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Blog - Agile">
  <Header />
  
  <!-- Page Header -->
  <section class="section pb-0">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8 text-center">
          <span class="inline-block bg-primary text-white px-5 py-2 rounded text-sm font-semibold mb-4">Blog</span>
          <h1 class="mb-4">Latest News & Insights</h1>
          <p class="text-lg text-light">Stay updated with the latest trends in SaaS management, automation, and business optimization.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="section">
    <div class="container">
      <div class="row g-4">
        {posts.map((post) => (
          <div class="md:col-6 lg:col-4">
            <div class="rounded-lg overflow-hidden bg-white shadow h-full flex flex-col">
              <a href={`/blog/${post.slug}`} class="block overflow-hidden">
                <img loading="lazy" class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300" src={post.data.image} alt={post.data.title} />
              </a>
              <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center space-x-4 text-sm text-light mb-3">
                  <span>{post.data.date}</span>
                  {post.data.category && (
                    <>
                      <span>•</span>
                      <span class="text-primary">{post.data.category}</span>
                    </>
                  )}
                </div>
                <h5 class="mb-3">
                  <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">{post.data.title}</a>
                </h5>
                <p class="text-light mb-4 flex-grow">{post.data.excerpt}</p>
                <div class="flex items-center justify-between mt-auto pt-4 border-t border-border">
                  <div class="flex items-center">
                    <img loading="lazy" class="h-10 w-10 rounded-full mr-3" src={post.data.authorImage || "/images/blog/profile.png"} alt={post.data.author} />
                    <span class="text-sm text-dark font-medium">{post.data.author}</span>
                  </div>
                  <a href={`/blog/${post.slug}`} class="text-primary font-semibold text-sm hover:underline">Read More →</a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section">
    <div class="container">
      <div class="lg:col-10 mx-auto">
        <div class="row gx-4 justify-between items-center">
          <div class="lg:order-1 order-2 lg:col-7 xl:col-6">
            <h2 class="has-shape">Subscribe to our newsletter</h2>
            <p class="mb-6">Get the latest articles and insights delivered straight to your inbox.</p>
            <div class="row gx-3 gy-4">
              <div class="sm:col-7">
                <input placeholder="Your Email" class="form-input w-full" type="email" name="email" />
              </div>
              <div class="sm:col-5">
                <button class="btn btn-primary h-full w-full">Subscribe</button>
              </div>
            </div>
          </div>
          <div class="lg:order-2 order-1 lg:col-5 mb-8 lg:mb-0">
            <img loading="lazy" class="max-lg:mx-auto lg:w-full" width="400" height="304" src="/images/about/5.png" alt="Newsletter" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
