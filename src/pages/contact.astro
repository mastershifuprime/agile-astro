---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="Contact Us - Agile">
  <Header currentPath="/contact" />
  
  <PageHeader title="Contact Us" subtitle="Get in touch with our team." />

  <section class="section-sm">
    <div class="container">
      <div class="row gy-5">
        <div class="lg:col-6">
          <h3 class="mb-4">Send us a message</h3>
          <form>
            <div class="mb-4">
              <label class="form-label" for="name">Full Name</label>
              <input type="text" id="name" class="form-input" placeholder="John Doe" />
            </div>
            <div class="mb-4">
              <label class="form-label" for="email">Email Address</label>
              <input type="email" id="email" class="form-input" placeholder="john@example.com" />
            </div>
            <div class="mb-4">
              <label class="form-label" for="subject">Subject</label>
              <input type="text" id="subject" class="form-input" placeholder="How can we help?" />
            </div>
            <div class="mb-4">
              <label class="form-label" for="message">Message</label>
              <textarea id="message" class="form-input" rows="5" placeholder="Your message..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
        <div class="lg:col-6">
          <h3 class="mb-4">Contact Information</h3>
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="flex-none w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                <i class="fa fa-map-marker-alt text-primary text-xl"></i>
              </div>
              <div>
                <h5>Address</h5>
                <p class="text-light">4517 Washington Ave. Manchester, Kentucky 39495</p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div class="flex-none w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                <i class="fa fa-phone text-primary text-xl"></i>
              </div>
              <div>
                <h5>Phone</h5>
                <p class="text-light">(629) 555-0129</p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div class="flex-none w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                <i class="fa fa-envelope text-primary text-xl"></i>
              </div>
              <div>
                <h5>Email</h5>
                <p class="text-light">contact@agile.com</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
