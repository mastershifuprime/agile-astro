---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
import CallToAction from '../components/CallToAction.astro';

const plans = [
  {
    name: 'Starter',
    monthlyPrice: 19,
    yearlyPrice: 190,
    features: ['5 Team Members', '10GB Storage', 'Basic Support', 'API Access'],
    popular: false,
  },
  {
    name: 'Professional',
    monthlyPrice: 49,
    yearlyPrice: 490,
    features: ['25 Team Members', '100GB Storage', 'Priority Support', 'API Access', 'Custom Integrations'],
    popular: true,
  },
  {
    name: 'Enterprise',
    monthlyPrice: 99,
    yearlyPrice: 990,
    features: ['Unlimited Team Members', '1TB Storage', '24/7 Support', 'API Access', 'Custom Integrations', 'Dedicated Account Manager'],
    popular: false,
  },
];
---

<Layout title="Pricing - Agile">
  <Header currentPath="/pricing" />
  
  <PageHeader title="Pricing" subtitle="Choose the perfect plan for your needs." />

  <section class="section-sm">
    <div class="container">
      <!-- Pricing Toggle -->
      <div class="flex justify-center mb-10">
        <div class="inline-flex rounded-lg bg-theme-light p-1">
          <button data-package="monthly" class="btn btn-primary px-6 py-2">Monthly</button>
          <button data-package="yearly" class="btn px-6 py-2">Yearly</button>
        </div>
      </div>

      <div class="row g-4">
        {plans.map((plan) => (
          <div class="md:col-6 lg:col-4">
            <div class={`h-full rounded-xl border p-8 ${plan.popular ? 'popular' : 'border-border bg-white'}`}>
              <h4 class="mb-2">{plan.name}</h4>
              <div class="mb-6">
                <span class="text-h2 font-bold text-primary" data-price-monthly={plan.monthlyPrice} data-price-yearly={plan.yearlyPrice}>
                  ${plan.monthlyPrice}
                </span>
                <span class="text-light">/month</span>
              </div>
              <ul class="space-y-3 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-center space-x-2">
                    <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              <a href="/contact" class={`btn w-full text-center ${plan.popular ? 'btn-primary' : 'btn-outline-primary'}`}>
                Get Started
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CallToAction />
  <Footer />
</Layout>
