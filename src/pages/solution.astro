---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
import CallToAction from '../components/CallToAction.astro';

const solutions = [
  {
    title: 'Sales & Revenue Operations',
    description: 'Streamline your sales process with automated workflows and intelligent insights.',
    image: '/images/solution/1.png',
    features: ['Lead scoring', 'Pipeline management', 'Revenue forecasting', 'Team analytics'],
  },
  {
    title: 'Employee Onboarding & Offboarding',
    description: 'Automate the entire employee lifecycle from day one to departure.',
    image: '/images/solution/2.png',
    features: ['Automated provisioning', 'Access management', 'Compliance tracking', 'Exit workflows'],
  },
  {
    title: 'SaaS Renewal Management',
    description: 'Never miss a renewal deadline with automated tracking and alerts.',
    image: '/images/solution/3.png',
    features: ['Renewal calendar', 'Cost optimization', 'Usage analytics', 'Contract management'],
  },
];
---

<Layout title="Solutions - Agile">
  <Header currentPath="/solution" />
  
  <PageHeader title="Our Solutions" subtitle="Discover how we can help transform your business operations." />

  {solutions.map((solution, index) => (
    <section class="section-sm">
      <div class={index % 2 === 1 ? 'has-bg' : ''}>
        <div class="container">
          <div class="row items-center gy-5 lg:gy-0">
            <div class={`lg:col-6 ${index % 2 === 1 ? 'order-2 lg:order-1' : ''}`}>
              <h3 class="mb-3">{solution.title}</h3>
              <p class="mb-6 text-light leading-7">{solution.description}</p>
              <ul class="list-group text-dark mb-8">
                {solution.features.map((feature) => (
                  <li class="list-item">{feature}</li>
                ))}
              </ul>
              <a href="/contact" class="btn btn-primary">Learn More</a>
            </div>
            <div class={`lg:col-6 ${index % 2 === 1 ? 'order-1 lg:order-2' : ''}`}>
              <img loading="lazy" width="498" height="462" src={solution.image} alt={solution.title} class="rounded-lg shadow" />
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <CallToAction />
  <Footer />
</Layout>
