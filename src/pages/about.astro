---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="About Us - Agile">
  <Header currentPath="/about" />
  
  <PageHeader title="About Us" subtitle="We are a team of passionate individuals dedicated to helping businesses succeed." />

  <!-- About Section -->
  <section class="section-sm">
    <div class="container">
      <div class="row items-center gy-5 lg:gy-0">
        <div class="lg:col-6">
          <img loading="lazy" width="444" height="454" src="/images/about/1.png" alt="about" class="rounded-lg shadow" />
        </div>
        <div class="lg:col-6">
          <h3 class="mb-3">Our Mission</h3>
          <p class="mb-6 text-light leading-7">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, magni. 
            Voluptates, voluptatum. Quod, magni. Voluptates, voluptatum.
          </p>
          <p class="mb-8 text-light leading-7">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod, magni. 
            Voluptates, voluptatum.
          </p>
          <a href="/contact" class="btn btn-primary">Contact Us</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="section-sm">
    <div class="has-bg">
      <div class="container">
        <div class="row text-center">
          <div class="md:col-3">
            <h2 class="text-primary" data-counter data-target="100" data-speed="50">0</h2>
            <p class="text-lg font-semibold">Happy Clients</p>
          </div>
          <div class="md:col-3">
            <h2 class="text-primary" data-counter data-target="500" data-speed="50">0</h2>
            <p class="text-lg font-semibold">Projects Completed</p>
          </div>
          <div class="md:col-3">
            <h2 class="text-primary" data-counter data-target="50" data-speed="50">0</h2>
            <p class="text-lg font-semibold">Team Members</p>
          </div>
          <div class="md:col-3">
            <h2 class="text-primary" data-counter data-target="10" data-speed="50">0</h2>
            <p class="text-lg font-semibold">Years Experience</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CallToAction />
  <Footer />
</Layout>
